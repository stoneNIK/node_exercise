extends layout

block content
    .container
        h5= 商品修改
        form(class='form-horizontal', action='//localhost:3000/goods/update/submit')
            .form-group
                label(class='col-sm-2 control-label', for='inputName') Name:
                .col-sm-10
                    input(class='form-control', name='name', type='text', id='inputName', placeholder='商品名称', value=_data.name, required)
            .form-group
                label(class='col-sm-2 control-label', for='inputURL') URL:
                .col-sm-10
                    input(class='form-control', name='url', type='text', id='inputURL', placeholder='链接地址', value=_data.url, required)
            .form-group
                label(class='col-sm-2 control-label', for='inputPrice') 价格:
                .col-sm-10
                    input(class='form-control', name='price', type='text', id='inputPrice', placeholder='商品价格', value=_data.price, required)
            .form-group
                div(class='col-sm-offset-2 col-sm-10')
                    .checkbox
                        label
                            input(type='checkbox', name='hot', checked=_data.hot)
                            = '\t'
                            span 推荐商品
            input(type='hidden', name='_id', value=_data._id)
            .form-group
                div(class='col-sm-offset-2 col-sm-10')
                    button(type='submit', class='btn btn-info') 提交